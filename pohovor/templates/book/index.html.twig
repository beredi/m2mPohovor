{% extends 'base.html.twig' %}


{% block body %}

    {% for message in app.flashes('deleted') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row" style="margin-top: 5vh;">

        <h1><i class="fas fa-book-open"></i> Zoznam kníh</h1>
        <a title="Pridať knihu" href="{{ path('book.add') }}" class="btn btn-primary ml-auto" style="">
            <i class="fas fa-plus"></i>
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Názov</th>
            <th>Autor</th>
            <th>Počet</th>
            <th>Aktuálny počet</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}

            <tr>
                <td>{{ book.name }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.count }}</td>
                <td>{{ book.actualCount }}</td>
                <td class="float-right">
                    <a title="Pridať dalšie kusy" href="{{ path('book.addmore',{id: book.id}) }}" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                    <a title="Vymazať knihu" href="{{ path('book.delete',{id: book.id}) }}" class="btn btn-danger">
                        <i class="fas fa-user-minus"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
