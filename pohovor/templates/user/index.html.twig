{% extends 'base.html.twig' %}


{% block body %}

    {% for message in app.flashes('deleted') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row" style="margin-top: 5vh;">

        <h1><i class="fas fa-users"></i> Čitatelia</h1>
        <a title="Pridať čitateľa" href="{{ path('user.add') }}" class="btn btn-primary ml-auto" style=""><i class="fas fa-user-plus"></i></a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Meno</th>
                <th>Priezvisko</th>
                <th>Počet vypožičaných kníh</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}

                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.bookCount }}</td>
                    <td class="float-right">
                        <a title="Vybrať čitateľa" href="{{ path('taken.index',{id: user.id}) }}" class="btn btn-success">
                            <i class="fas fa-check-square"></i>
                        </a>
                        <a title="Vymazať čitateľa" href="{{ path('user.delete',{id: user.id}) }}" class="btn btn-danger">
                            <i class="fas fa-user-minus"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
